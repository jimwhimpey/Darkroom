!!! 5
%html
	%head
		!= haml(:"_head", :layout => false)
	%body
		#wrapper
			#header
				%img{:src => @user['avatar'], :width => "48", :height => "48"}
				%h1
					%a{:href => "http://flickr.com/photos/#{@user['name']}/sets"} #{@user['name']}'s Sets
				#darkroom
					%a{:href => "/"} Darkroom&nbsp;
			#sets
				%ul
					- @sets.each do |set|
						%li
							%a{:href => "/photos/#{@user['name']}/sets/#{set['id']}"}
								#{set['title']}
		!= haml(:"_stats", :layout => false)